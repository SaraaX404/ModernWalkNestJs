// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum UserRole {
  ADMIN
  USER
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  password  String
  role      UserRole  @default(USER) // Set the default value to USER
}


model Product {
  id Int @id @default(autoincrement())
  title String
  price Int
  description String
  category String
  image String
  rating Int
  rating_count Int
}

model Category {
  id Int @id @default(autoincrement())
  name String
}




